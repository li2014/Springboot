<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.liyao</groupId>
  <artifactId>spring-boot-demos</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>spring-boot-demos</name>
  <url>http://maven.apache.org</url>
  <properties>
     <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

	<modules>
		<module>SpringBoot-Quartz</module>
        <module>helloword</module>
        <module>springboot-editor.md</module>
        <module>springboot-filter-listener-interceptor</module>
        <module>SpringBoot-Google-Check</module>
        <module>SpringBoot-i18n</module>
        <module>SpringBoot-JWT</module>
        <module>SpringBoot-limit</module>
        <module>springboot-log</module>
        <module>springboot-mail</module>
        <module>springboot-mongodb</module>
        <module>springboot-mq</module>
        <module>Springboot-multi-source</module>
        <module>springboot-mybatis-annotation</module>
        <module>springboot-mybatis-config</module>
        <module>springboot-mybatisplus</module>
        <module>springboot-redis</module>
        <module>springboot-web</module>
	</modules>

  <build>
        <finalName>spring-boot</finalName>
		<plugins>
		    <!-- 打包项目 mvn clean package -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			     <dependencies>
				   <!--  mvn spring-boot:run 热部署启动 -->
                    <dependency>
                        <groupId>org.springframework</groupId>
                        <artifactId>springloaded</artifactId>
                        <version>1.2.7.RELEASE</version>
                    </dependency>
                </dependencies>
			</plugin>
		</plugins>
	</build>
</project>